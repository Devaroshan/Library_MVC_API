@model Library_MVC_API.Models.Book

@{
    ViewData["Title"] = "Edit";
}
<style>
    * {
        color: black;
    }
</style>
<h1>Editing Book Info</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                if (@ViewBag.mes != null)
                {
                    <p class="text-danger">@ViewBag.mes</p>
                }
            }
            <input type="hidden" asp-for="Bid" />
            <div class="form-group">
                <label asp-for="Bname" class="control-label"></label>
                <input asp-for="Bname" class="form-control" />
                <span asp-validation-for="Bname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jonour" class="control-label"></label>
                <input asp-for="Jonour" class="form-control" />
                <span asp-validation-for="Jonour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoofCopies" class="control-label"></label>
                <input asp-for="NoofCopies" class="form-control" />
                <span asp-validation-for="NoofCopies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Book List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
